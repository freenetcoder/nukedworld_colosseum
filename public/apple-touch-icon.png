<svg
  width="180"
  height="180"
  viewBox="0 0 100 100"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Background for Apple touch icon -->
  <rect width="100" height="100" fill="#0F172A" rx="15"/>
  
  <!-- Nuclear symbol background -->
  <circle
    cx="50"
    cy="50"
    r="30"
    fill="#1F2937"
    stroke="#F97316"
    stroke-width="2"
  />
  
  <!-- Nuclear trefoil symbol -->
  <g transform="translate(50,50)">
    <!-- Center circle -->
    <circle cx="0" cy="0" r="6" fill="#F97316" />
    
    <!-- Three radiation sectors -->
    <g>
      <path
        d="M 0,-20 A 20,20 0 0,1 17.32,-10 L 8.66,-5 A 10,10 0 0,0 0,-10 Z"
        fill="#F97316"
      />
      <path
        d="M 17.32,10 A 20,20 0 0,1 -17.32,10 L -8.66,5 A 10,10 0 0,0 8.66,5 Z"
        fill="#F97316"
      />
      <path
        d="M -17.32,-10 A 20,20 0 0,1 0,-20 L 0,-10 A 10,10 0 0,0 -8.66,-5 Z"
        fill="#F97316"
      />
    </g>
    
    <!-- Inner glow effect -->
    <circle cx="0" cy="0" r="4" fill="#FED7AA" opacity="0.8" />
    <circle cx="0" cy="0" r="2" fill="#FB923C" />
  </g>
</svg>