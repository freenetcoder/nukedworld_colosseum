<svg
  width="32"
  height="32"
  viewBox="0 0 100 100"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Nuclear symbol background -->
  <circle
    cx="50"
    cy="50"
    r="40"
    fill="#1F2937"
    stroke="#F97316"
    stroke-width="4"
  />
  
  <!-- Nuclear trefoil symbol -->
  <g transform="translate(50,50)">
    <!-- Center circle -->
    <circle cx="0" cy="0" r="10" fill="#F97316" />
    
    <!-- Three radiation sectors -->
    <g>
      <path
        d="M 0,-30 A 30,30 0 0,1 25.98,-15 L 12.99,-7.5 A 15,15 0 0,0 0,-15 Z"
        fill="#F97316"
      />
      <path
        d="M 25.98,15 A 30,30 0 0,1 -25.98,15 L -12.99,7.5 A 15,15 0 0,0 12.99,7.5 Z"
        fill="#F97316"
      />
      <path
        d="M -25.98,-15 A 30,30 0 0,1 0,-30 L 0,-15 A 15,15 0 0,0 -12.99,-7.5 Z"
        fill="#F97316"
      />
    </g>
    
    <!-- Inner glow effect -->
    <circle cx="0" cy="0" r="7" fill="#FED7AA" opacity="0.8" />
    <circle cx="0" cy="0" r="4" fill="#FB923C" />
  </g>
</svg>